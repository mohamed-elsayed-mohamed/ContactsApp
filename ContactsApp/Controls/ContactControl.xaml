<UserControl x:Class="ContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Margin="5" Background="#AAE5E5E5">
        <StackPanel>
            <TextBlock x:Name="lblName" Text="Name" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="lblEmail" Text="Email" FontSize="15" Foreground="DodgerBlue"/>
            <TextBlock x:Name="lblPhone" Text="Phone" FontSize="20" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
